<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent" android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp" android:id="@+id/itemPanel"
    android:layout_height="wrap_content" android:background="@color/reStore_pink_light" android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical" android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">
            <TextView
                android:textColor="@color/reStore_white" android:textSize="17dp"
                android:textStyle="bold" android:text="Выгрузка"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/typePoint" />
            <TextView  android:textSize="17dp"
                android:textColor="@color/reStore_white" android:textStyle="bold"
                android:layout_width="match_parent" android:text="Точка 1"
                android:layout_height="wrap_content" android:id="@+id/point" />
            <TextView android:textSize="17dp" android:text="Время прибытия" android:textStyle="bold"
                android:layout_width="match_parent" android:textColor="@color/reStore_white"
                android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/plan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:visibility="gone"
            android:id="@+id/extendedPart">
            <LinearLayout
                android:layout_width="match_parent" android:id="@+id/addressLayout"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView
                    android:textColor="@color/reStore_white"
                    android:textSize="17dp"
                    android:layout_weight="2" android:text="Адрес"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="17dp"
                    android:textColor="@color/reStore_white"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/address" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent" android:id="@+id/clientLayout"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView
                    android:textColor="@color/reStore_white"
                    android:textSize="17dp"
                    android:layout_weight="2" android:text="Клиент"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="17dp"
                    android:textColor="@color/reStore_white"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/client" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent" android:id="@+id/docLayout"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView
                    android:textColor="@color/reStore_white"
                    android:textSize="17dp"
                    android:layout_weight="2" android:text="Документ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="17dp"
                    android:textColor="@color/reStore_white"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/document" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent" android:id="@+id/contactLayout"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView
                    android:textColor="@color/reStore_white"
                    android:textSize="17dp"
                    android:layout_weight="2" android:text="Контакт"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="17dp"
                    android:textColor="@color/reStore_white"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/contact" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent" android:orientation="vertical" android:layout_gravity="center_horizontal">
        <ImageButton android:layout_marginTop="5dp"
            android:layout_width="25dp" android:background="@null" android:id="@+id/phoneCall"
            android:layout_height="25dp" android:src="@drawable/phone" android:scaleType="fitCenter"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1"/>
        <ImageButton android:layout_marginBottom="5dp"
            android:layout_width="25dp" android:background="@null" android:id="@+id/expand"
            android:layout_height="25dp" android:src="@drawable/question" android:scaleType="fitCenter"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"  android:visibility="gone"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView android:textSize="17dp"
            android:layout_width="match_parent" android:textColor="@color/reStore_white"
            android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/arrival" />
    </LinearLayout>
    <LinearLayout  android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent" android:textColor="@color/reStore_white" android:textSize="17dp"
            android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/start" />
    </LinearLayout>
    <LinearLayout android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:textSize="17dp"
            android:textColor="@color/reStore_white"
            android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/finish" />
    </LinearLayout>



</LinearLayout>